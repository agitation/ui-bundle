{% extends "AgitUiBundle:Include:page.base.html.twig" %}

{% block layout_css %}
    {% stylesheets
        "@AgitUiBundle/Resources/public/css/layout.app.css"

        filter="?uglifycss"
    %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}
{% endblock %}

{% block layout_js %}
        {% javascripts
            "@AgitUiBundle/Resources/public/js/lib/layout/app/Page.js"
            "@AgitUiBundle/Resources/public/js/lib/layout/app/Header.js"

            filter="?uglifyjs2"
        %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
        {% endjavascripts %}
{% endblock %}

{% block layout_templates %}
    {% include "AgitUiBundle:Include:template.layout.app.html.twig" %}
{% endblock %}
