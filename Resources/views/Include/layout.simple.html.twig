{% extends "AgitUiBundle:Include:page.base.html.twig" %}

{% block layout_css %}
    {% stylesheets
        "@AgitUiBundle/Resources/public/css/layout.simple.css"

        filter="?uglifycss"
    %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="body">
        <h1 class="container">{{ block("title") }}</h1>

        <main class="container">
            {% block main %}
            {% endblock %}
        </main>
    </div>
{% endblock %}
