{% extends 'AgitUiBundle:Include:page.base.html.twig' %}

{% agit.capability "" %}
{% agit.status "404" %}
{% set noindex = 1 %}
{% block title %}{{ x('Page not found', 'page title') }}{% endblock %}

{% block body %}
<div class="container padded" role="main">
    <div class="panel panel-danger">
        <div class="panel-heading">
            <h3 class="panel-title">{{ block('title') }}</h3>
        </div>
        <div class="panel-body">
            <p>{{ t('The requested page could not be found. Please check the spelling of the address, or notify the owner of the referring web page.') }}</p>
        </div>
    </div>
</div>
{% endblock %}
