<template id="agitui-form">
    <form class="api-form" method="post" action="">
        <table class="form break-xs">
        </table>
    </form>

    <table class="dummy">
        <tbody class="api-form-row">
            <tr>
                <th scope="row">
                    <label></label>
                    <span class="optional">{{ t("(optional)") }}</span>
                </th>
                <td>
                    <div class="field"></div>
                    <div class="description"></div>
                </td>
            </tr>
        </tbody>
        <tfoot class="api-form-footer">
            <tr>
                <td></td>
                <td>
                    <button class="btn btn-primary" type="submit">{{ t("submit") }}</button>
                </td>
            </tr>
        </tfoot>
    </table>

    <input type="text" class="form-control">

    <select class="form-control">
        <option class="pleaseselect" value="">{{ t("– Please select –") }}</option>
    </select>

    <div class="boolean">
        <input type="checkbox">
        <label></label>
    </div>

    <input class="form-control datepicker" type="text" value="" readonly="readonly">
    <i class="datepicker-icon fa fa-calendar"></i>

    <div class="password input-group">
        <input type="password" class="form-control">
        <span class="input-group-btn buttons">
            <button class="show-pass btn btn-default" type="button" title="{{ t("show password") }}">
                <i class="fa fa-eye"></i>
            </button>
            <button class="hide-pass btn btn-default" type="button" title="{{ t("hide password") }}">
                <i class="fa fa-eye-slash"></i>
            </button>
        </span>
    </div>
</template>
