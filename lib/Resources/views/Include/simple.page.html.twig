{% spaceless %}
{# simple page layout for error pages etc. #}

<!DOCTYPE html>
<html lang="{{ locale|slice(0, 2) }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ getPageName() }}</title>

    <style type="text/css">
        html, body { font-family: -apple-system, BlinkMacSystemFont, "Helvetica Neue", "Segoe UI", Oxygen, Roboto, roboto, Arial, sans-serif; background: #f8f8f8 }
        main       { margin: 100px auto 0; padding: 40px; max-width: 550px; border: 1px solid #bbb; box-shadow: 0px 0px 3px #bbb; background: #fff; color: #444; font-size: 14px; border-radius: 2px; }
        h1         { margin: 0 0 10px; font-weight: 300; font-size: 30px; text-transform: uppercase; }
        h2         { margin: 0 0 10px; font-weight: 400; font-size: 15px; }
        p          { margin: 15px 0 0; }
        a          { color: rgb(64,100,130); text-decoration: none; }
    </style>
</head>
<body>
    <main>
        {% block main %}{% endblock %}
    </main>
</body>
</html>
{% endspaceless %}
