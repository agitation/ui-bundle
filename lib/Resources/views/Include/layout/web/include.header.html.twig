<div class="navbar-wrapper navbar-inverse">
    <div class="container">
        <div class="navbar navbar-inverse navbar-static-top">
            <div class="navbar-header">
                <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                {% block header_left %}
                    <ul class="nav navbar-nav nav-pills navbar-left">
                        {% block menu %}
                        {% endblock %}
                    </ul>
                {% endblock %}

                {% block header_right %}
                    {% set locUrls = getPageLocaleUrls() %}
                    {% if locUrls|length %}
                        <ul class="nav navbar-nav nav-pills navbar-right">
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown">
                                    <i class='fa fa-globe'></i> <span>{{ t("Language") }}</span> <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-right">
                                    {% for loc, locUrl in locUrls %}
                                        <li{{ locUrl.isCurrent ? " class='current'" : "" }}>
                                            <a href="{{ locUrl.url }}" rel="alternate" hreflang="{{ loc }}">{{ locUrl.name }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </li>
                        </ul>
                    {% endif %}
                {% endblock %}
            </div>
        </div>
    </div>
</div>
